include /_mixins
include /_cart_mock
include /_functions

doctype html
html
  head
    title Web Store
    +stylesheet_link_tag("application")
    link(type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Fjalla+One")
  body
    main
      h1 Products
      #cart
        h3
          a(href="#")
            | Cart
            span= cartQuantity()
        #items
          ul
            each cartItem in cart
              li
                | #{cartItem.title} x #{cartItem.quantity}
                span $#{format(cartItem.price * cartItem.quantity)}
            li
              strong Total
              span $#{format(cart.reduce(total))}
          a(href="#") Checkout

      block content
    +javascript_include_tag("cart")
